<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EF9CBE"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/a"
        android:layout_width="257dp"
        android:layout_height="80dp"
        android:ems="10"
        android:inputType="text"
        android:text="enter a"
        android:textColor="#926A073B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.385"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.237" />

    <EditText
        android:id="@+id/b"
        android:layout_width="246dp"
        android:layout_height="85dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="text"
        android:text="enter b"
        android:textColor="#926E1241"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a" />

    <EditText
        android:id="@+id/c"
        android:layout_width="268dp"
        android:layout_height="89dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="text"
        android:text="enter c"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b" />

    <Button
        android:id="@+id/enterRandom"
        android:layout_width="135dp"
        android:layout_height="76dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:background="#FFFFFF"
        android:backgroundTint="#92FF69B7"
        android:onClick="randomNums"
        android:text="enter random"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/c"
        app:rippleColor="#FFFFFF"
        app:strokeColor="#FFFFFF" />

    <Button
        android:id="@+id/watchResult"
        android:layout_width="138dp"
        android:layout_height="75dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#92FF65B5"
        android:onClick="go"
        android:text="watch result"
        app:layout_constraintStart_toEndOf="@+id/enterRandom"
        app:layout_constraintTop_toBottomOf="@+id/c"
        app:rippleColor="#FFFFFF" />
</androidx.constraintlayout.widget.ConstraintLayout>